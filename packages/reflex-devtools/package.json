{
  "name": "@flexsurfer/reflex-devtools",
  "version": "0.1.0",
  "description": "Developer tools for applications built with the reflex library",
  "type": "module",
  "main": "dist/client/index.js",
  "types": "dist/client/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    }
  },
  "bin": {
    "reflex-devtools": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js"
  },
  "keywords": ["devtools", "debugging", "react", "react-native", "reflex"],
  "author": "flexsurfer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.12.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.4",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^7.0.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "@flexsurfer/reflex": ">=0.1.7"
  }
} 